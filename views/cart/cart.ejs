<%-include('../partials/header')%> <%-include('../partials/navbar')%>

<main>
  <%-include('../flash.ejs')%>

  <h1 class="display-8">My Cart</h1>
  <section class="container row parent mt-2">
    <div class="text-center mx-auto" style="width: 25rem">
      <div class="card-body shadow">
        <% for(let item of user.cart){ %>
        <h2 class="mt-2"><%=item.name%></h2>

        <img src="<%= item.img %>" alt="img" />

        <h2 class="price" style="color: black">Rs <%=item.price%></h2>

        <p><%=item.desc%></p>
        <form
          class="d-inline"
          action="/user/cart/<%= item._id %>/remove"
          method="POST"
        >
          <button type="submit" class="btn btn-sm btn-danger me-2">
            Remove
          </button>
        </form>
        <% } %>
      </div>
    </div>

    <div class="col-lg-4">
      <ul>
        <% for(let item of user.cart){ %>
        <li><span> <%=item.name%> --&gt; ₹ <%=item.price%> </span></li>
        <% } %>
        <li>Total Amount: ₹ <%=totalAmount%></li>
      </ul>
      <a href="/checkout/<%=user._id%>"
        ><button class="btn btn-sm btn-success">Checkout</button></a
      >
    </div>
  </section>
</main>

<script src="/js/common.js"></script>

<%-include('../partials/footer.ejs')%>
