<%-include('./partials/header')%> <%-include('./partials/navbar')%>

<main>
  <%-include('./flash.ejs')%>

  <div class="row mt-5">
    <% for(let item of products){ %>
    <div class="col-lg-4 product-card">
      <div
        class="card text-center shadow mt-3 mx-auto mb-3 hover-element"
        style="width: 24rem"
        data-aos="flip-left"
        data-aos-easing="ease-out-cubic"
        data-aos-duration="2000"
      >
        <img
          class="img zoom-image"
          src="<%=item.img%>"
          class="card-img-top"
          alt="..."
        />
        <div class="card-body">
          <h3 class="card-title"><%= item.name %></h3>
          <span class="btn like-btn" product-id="<%=item._id%>">
            <% if(currentUser && currentUser.wishlist.includes(item._id)){ %>
            <i class="fa-solid fa-heart fa-flip"></i>
            <% } else{ %>
            <i class="fa-regular fa-heart"></i>
            <% } %>
          </span>
          <h5 class="card-title">Rs: <%= item.price %></h5>
          <p class="card-text"><%= item.desc %></p>
          <p class="card-text"><%= item.instock %></p>
          <a href="/products/<%=item._id%>" class="btn btnn btn-primary"
            >View Product</a>
        </div>
      </div>
    </div>

    <% } %>
  </div>
</main>

<script src="/js/common.js"></script>

<%-include('./partials/footer.ejs')%>
